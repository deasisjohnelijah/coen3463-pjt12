        .content
         

          .container
            .row
              .col-md-12
                .panel
                  img.pic.img-circle(src='http://bootdey.com/img/Content/avatar/avatar1.png', alt='User photo')
                  .username Username
            .row
              .col-md-3
                .sidebar-nav
                  .navbar.navbar-default(role='navigation')
                    .navbar-header
                      button.navbar-toggle(type='button', data-toggle='collapse', data-target='.sidebar-navbar-collapse')
