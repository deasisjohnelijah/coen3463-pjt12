                        li
                          a(href='#') Change password
              .col-md-9
                span.profile-item-header  Edit profile:
                .edit-profile
                  form#editProfileForm(method='post')
                    .form-group.row
                      label.col-xs-3.form-control-label(for='firstName') First name
                      .col-xs-9
                        input#firstName.form-control(type='text', placeholder='Enter your first name')
                    .form-group.row
                      label.col-xs-3.form-control-label(for='lastName') Last name
                      .col-xs-9
                        input#lastName.form-control(type='text', placeholder='Enter your last name')
                    .form-group.row
                      label.col-xs-3.form-control-label Gender
                      .col-xs-9.gender
                        label.radio-inline
                          input(type='radio', name='genderRadio', value='male', checked='checked')
                          i.fa.fa-mars
                          span Male
                        label.radio-inline
                          input(type='radio', name='genderRadio', value='female')
                          i.fa.fa-venus
                          span Female
                        label.radio-inline
                          input(type='radio', name='genderRadio', value='unknown')
                          i.fa.fa-reddit-alien
                          span Unknown
                    .form-group.row
                      label.col-xs-3.form-control-label(for='birth') Date of Birth
                      .col-xs-9.date
                        #birth.input-group.date
                          input.form-control(type='text', readonly='')
                          .input-group-addon
                            span.glyphicon.glyphicon-calendar
                    .form-group.row
                      label.col-xs-3.form-control-label(for='Country') Country
                      .col-xs-9
                        select.form-control(name='country')
                          option(label='Select your country')
                          option(value='arabic') Arabic
                          option(value='english') English
                          option(value='french') French
                          option(value='german') German
                    .form-group.row
                      label.col-xs-3.form-control-label(for='avatar') Choose avatar
                      .col-xs-9
                        input.file.file-loading(name='avatar', type='file', data-allowed-file-extensions='["png", "jpg"]')
                    .col-xs-12.button-container
                      input.btn.btn-default(type='submit', value='Save changes')
                      input.btn.btn-default(type='reset', value='Reset changes')
