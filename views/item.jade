        .content(style="margin-bottom:10%;")
            .container
              .card
                .product-rating
                  i.fa.fa-shopping-cart(aria-hidden='true')
                  
                  span   Buy this Now!
                h2.product-title #{item.name}
              .card
                .product-image-group
                  img.product-image-main(src='#{item.imageUrl1}', alt='')
                  .secondary-image-group
                    img.product-image-secondary(src='#{item.imageUrl1}', alt='')
                    img.product-image-secondary(src='#{item.imageUrl1}', alt='')
              .card
                .ribbon
                  i.fa.fa-dollar(aria-hidden='true')
                  |  Price
                .price
                  | #{item.price}
                  span  
                
              .card
                strong Description:
                p
                  | #{item.description}
                hr
                .split
                  span Category: 
                  span #{item.category}
                hr
                .split
                  span Status:
                  span #{item.status}
                hr
                .split
                  span Date Posted:
                  span #{moment(item.createdate).format("LLL")}
                hr
                if user.username == item.sellername
                  a(href='/items/' + item._id+'/edit')
                    button.product-docs
                      i.fa.fa-pencil-square-o(aria-hidden='true')
                      |  Edit Item
                  a(href='/items/' + item._id+'/delete')
                    button.product-docs
                      i.fa.fa-trash-o(aria-hidden='true')
                      |  Delete Item
                else
                
              .card
                .split
                  strong Seller Details
                  .product-rating
                    i.fa.fa-user(aria-hidden='true')
                    span  Profile
                hr
                img.img-responsive.circle-image.center-block(src="#{item.sellerphoto}" alt="Profile Pic")
                h3
                span  #{item.sellername}
                hr
                span Contact No.: #{item.sellercontact}
                hr
                span Full Name: #{item.sellerfirst_name} #{item.sellerlast_name}
                hr
                span Email Address: #{item.selleremail}
                hr
                span School: #{item.sellerschool}
                hr
                a(href='#{item.sellerfacebook}' target='_blank')
                  button.write-review
                    i.fa.fa-facebook(aria-hidden='true')
                    |  Contact with Facebook

